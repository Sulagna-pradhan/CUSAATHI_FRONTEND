rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated() && isOwner(userId) 
        && request.resource.data.role == 'dev-team'
        && request.resource.data.isApproved == false;
      allow update: if (isAuthenticated() && isOwner(userId) 
          && request.resource.data.role == resource.data.role
          && request.resource.data.isApproved == resource.data.isApproved)
        || isAdmin();
      
      allow delete: if isAdmin();
    }
    
    match /subdomains/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    match /tasks/{taskId} {
     
      allow read: if isAuthenticated();
  
      allow create: if isAuthenticated() 
        && request.resource.data.assignedBy == request.auth.uid;
     
      allow update: if isAuthenticated() && (
       
        (request.resource.data.assignedBy == request.auth.uid 
          && request.resource.data.status == resource.data.status)
        ||
      
        (request.resource.data.assignedTo == request.auth.uid
          && request.resource.data.title == resource.data.title
          && request.resource.data.description == resource.data.description
          && request.resource.data.assignedTo == resource.data.assignedTo
          && request.resource.data.assignedBy == resource.data.assignedBy
          && request.resource.data.priority == resource.data.priority)
        ||
       
        isAdmin()
      );
      
    
      allow delete: if isAuthenticated() && (
        resource.data.assignedBy == request.auth.uid || isAdmin()
      );
    }
    
   
    match /activities/{activityId} {
     
      allow read: if isAuthenticated();
      
      
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
    
      allow update: if false;
      
      
      allow delete: if isAdmin();
    }
  }
}
